APP_NAME="Simple Test App"
APP_ENV=production
APP_KEY=base64:YOUR_KEY_WILL_BE_GENERATED
APP_DEBUG=false
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Use array driver instead of database
SESSION_DRIVER=file
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

# No database needed for testing
DB_CONNECTION=sqlite
DB_DATABASE=/tmp/database.sqlite